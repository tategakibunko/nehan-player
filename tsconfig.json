{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "lib": [
      "es2019",
      "dom",
    ],
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "preserveConstEnums": true,
    "pretty": false,
    "removeComments": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "src/**/*.test.ts",
    "node_modules",
    "example",
    "dist",
  ]
}